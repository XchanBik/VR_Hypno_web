{
  "name": "xr-app",
  "version": "1.0.0",
  "description": "Modern fullstack desktop app with Electron, Express, and Vue 3",
  "main": "build/electron/main.js",
  "scripts": {
    "clean": "rimraf build",
    "build:shared": "tsc -p tsconfig.shared.json",
    "build:server": "npm run build:shared && tsc -p tsconfig.server.json",
    "build:client": "npm run build:shared && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build": "npm run clean && npm run build:shared && npm run build:server && npm run build:client && npm run build:electron",
    "dev": "npm run build && node build/server/server.js",
    "electron": "npm run build && electron .",
    "start": "electron .",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "express": "^4.18.2",
    "vue": "^3.4.15"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "@vitejs/plugin-vue": "^5.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "build": {
    "appId": "com.xr.app",
    "productName": "XR App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "data/**/*"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
} 